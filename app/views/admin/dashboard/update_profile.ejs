<%- include('../../layout/admin/_head') -%>

<!-- Content Header (Page header) -->
<section class="content-header form-inline">
    <h1>Update Profile<small><a href="#" onclick="window.history.go(-1); return false;"><i class="fa fa-reply"></i></a></small></h1>
    <ol class="breadcrumb">
        <li><a href="<%= _adminUrl%>"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">Update Profile</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <% if (typeof(valid_errors) != 'undefined' && valid_errors.length > 0) { %>
    <section class="content-header">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <% valid_errors.forEach(function(error){ %>
            <p><i class="icon fa fa-warning"></i> <%= error%> </p>
            <% }); %>
        </div>
    </section>
    <% } %>
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <form class="form-horizontal" id="FormAdd" method="post" autocomplete="off">
                    <div class="box-body table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTable">
                            <tbody>
                            <tr>
                                <td><label for="fullname">Họ tên</label></td>
                                <td>
                                    <input type="text" class="form-control medium" name="fullname" value="<%=helpers.admin.get_query_data(data_edit,'fullname')%>" />
                                </td>
                            </tr>
                            <tr>
                                <td><label>Password</label></td>
                                <td>
                                    <div class="checkbox">
                                        <input id="checkbox_update_password" onchange="handleChange(this);" class="styled" type="checkbox" name="update_password" value="1">
                                        <label for="checkbox_update_password">Update password</label>
                                    </div>
                                    <div id="update-pass" style="display: none">
                                        <br>
                                        <input type="password" placeholder="Old password" name="old_password" id="old_password" class="form-control medium" autocomplete="off" />
                                        <br>
                                        <input type="password" placeholder="New password" name="new_password" id="new_password" class="form-control medium" autocomplete="off"/>
                                        <br>
                                        <input type="password" placeholder="Retype password" name="retype_password" id="retype_password" class="form-control medium" autocomplete="off"/>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <button type="button" onclick="Admin.confirm_submit(this);" class="btn btn-info btn-submit">Update</button>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
</div><!--/.content-wrapper-->
<script type="text/javascript">
    function handleChange(checkbox){
        if(checkbox.checked == true){
            document.getElementById("update-pass").style.display = "block";
        }else{
            document.getElementById("update-pass").style.display = "none";
        }
    }
</script>
<%- include('../../layout/admin/_footer') -%>
<%- include('../../layout/admin/_end') -%>
