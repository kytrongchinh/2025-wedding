<%- include('../../layout/admin/_head') -%>
<!-- Content Header (Page header) -->
<section class="content-header form-inline">
    <h1>Edit <%=mod_alias%><small><a href="<%=mod_url%>"><i class="fa fa-reply"></i></a></small></h1>
    <ol class="breadcrumb">
        <li><a href="<%= _adminUrl%>"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><%=title%></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <% if (typeof(valid_errors) != 'undefined' && valid_errors.length > 0) { %>
    <section class="content-header">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
            <% valid_errors.forEach(function(error){ %>
            <p><i class="icon fa fa-warning"></i> <%= error%> </p>
            <% }); %>
        </div>
    </section>
    <% } %>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body table-responsive">
                    <form class="form-horizontal" id="FormEdit" method="post">
                        <input type="hidden" class="form-control medium" name="_id" value="<%= data_edit._id%>" />
                        <input type="hidden" class="form-control medium" name="username" value="<%= data_edit.username %>" />
                        <input type="hidden" class="form-control medium" name="avatar" value="<%= data_edit.avatar %>" />
                        <table class="table table-bordered dataTable">
                            <tbody>
                                <tr>
                                    <td><label for="username">Username</label></td>
                                    <td>
                                        <input type="text" disabled class="form-control medium" value="<%= helpers.admin.get_query_data(data_edit,'username') %>" />
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="fullname">Fullname</label></td>
                                    <td>
                                        <input type="text" name="fullname" class="form-control medium" value="<%= helpers.admin.get_query_data(data_edit,'fullname') %>" />
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="role">Role</label></td>
                                    <td>
                                        <select class="form-control medium" name="role" required>
                                            <option value=""></option>
                                            <% for(let i = 0; i<appConfig.role_systems.length; i++){ %>
                                            <option value="<%= appConfig.role_systems[i]%>" <% if(helpers.admin.get_query_data(data_edit,'role') == appConfig.role_systems[i]){%> selected <%}%> > <%= appConfig.role_systems[i]%> </option>
                                            <%}%>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="status">Status</label></td>
                                    <td>
                                        <select name="status" id="status" class="form-control small">
                                            <option value="0" <% if(data_edit.status == '0'){%> selected <%}%>>InActive</option>
                                            <option value="1" <% if(data_edit.status == '1'){%> selected <%}%>>Active</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="is2FAEnabled">is2FAEnabled</label></td>
                                    <td>
                                        <select name="is2FAEnabled" id="is2FAEnabled" class="form-control small">
                                            <option value="0" <% if(data_edit.is2FAEnabled == '0'){%> selected <%}%>>Disable</option>
                                            <option value="1" <% if(data_edit.is2FAEnabled == '1'){%> selected <%}%>>Enable</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="secret2FA">secret2FA</label></td>
                                    <td>
                                        <input type="text" name="secret2FA" class="form-control medium" value="<%= helpers.admin.get_query_data(data_edit,'secret2FA') %>" />
                                    </td>
                                </tr>
                                <tr>
                                    <td><label for="fullname"></label></td>
                                    <td>
                                        <div class="checkbox">
                                            <input id="checkbox_update_password" class="styled" type="checkbox" name="update_password" value="1">
                                            <label for="checkbox_update_password">Update password</label>
                                        </div>
                                        <div id="box-update-password" style="display: none">
                                            <input type="text" name="password" id="password" class="form-control medium inline" value="" />
                                            <i class="fa fa-random" style="cursor: pointer;" id="randomPass"></i>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><button type="submit" class="btn btn-info">Edit</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
</div><!--/.content-wrapper-->
<script>
    $(document).ready(()=>{
        $('#checkbox_update_password').on('change',function(e){
            let isChecked = $(this).is(":checked")
            if(isChecked){
                document.getElementById("box-update-password").style.display = "block";
            }else{
                document.getElementById("box-update-password").style.display = "none";
            }
            
        })
        $('#randomPass').on('click',()=>{
            let p = Admin.random();
            $('input[name="password"]').val(p)
        })
    })
</script>
<%- include('../../layout/admin/_footer') -%>
<%- include('../../layout/admin/_end') -%>
